{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Base Server Keypoints Summary Documentation Schema",
  "description": "Schema for the summary version of base_server project keypoints with one-sentence summaries only",
  "type": "object",
  "required": ["project", "version", "sections"],
  "additionalProperties": false,
  "properties": {
    "project": {
      "type": "string",
      "description": "Name of the project",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^[a-zA-Z0-9\\s\\-._]+$"
    },
    "description": {
      "type": "string",
      "description": "Overview description of the documentation",
      "minLength": 1,
      "maxLength": 500
    },
    "version": {
      "type": "string",
      "description": "Version of the documentation",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time"
    },
    "sections": {
      "type": "array",
      "description": "Array of documentation sections",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "keypoints"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "integer",
            "description": "Section ID number",
            "minimum": 1,
            "maximum": 99
          },
          "name": {
            "type": "string",
            "description": "Section name",
            "minLength": 1,
            "maxLength": 150
          },
          "keypoints": {
            "type": "array",
            "description": "Array of keypoints within this section",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "name", "summary"],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Keypoint ID in format X.Y",
                  "pattern": "^\\d+\\.\\d+$"
                },
                "name": {
                  "type": "string",
                  "description": "Keypoint title",
                  "minLength": 1,
                  "maxLength": 150
                },
                "summary": {
                  "type": "string",
                  "description": "One-sentence summary of the keypoint",
                  "minLength": 10,
                  "maxLength": 200
                }
              }
            }
          }
        }
      }
    }
  }
}

{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Documentation Skills Schema",
  "description": "Schema for defining skills used by the documentation generation agent",
  "type": "object",
  "required": ["skills"],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "description": "Version of the skills definition",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "description": "ISO 8601 timestamp of last update",
      "format": "date-time"
    },
    "skills": {
      "type": "array",
      "description": "Array of skill definitions",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "description", "purpose"],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string",
            "description": "Unique skill identifier",
            "minLength": 1,
            "maxLength": 100,
            "pattern": "^[a-z0-9_]+$"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the skill",
            "minLength": 10,
            "maxLength": 500
          },
          "purpose": {
            "type": "string",
            "description": "Purpose and use case",
            "minLength": 10,
            "maxLength": 500
          },
          "category": {
            "type": "string",
            "description": "Category of skill",
            "enum": ["parsing", "transformation", "validation", "io", "analysis", "generation"]
          },
          "inputs": {
            "type": "array",
            "description": "Input parameters",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 50
                },
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean", "object", "array"]
                },
                "required": {
                  "type": "boolean",
                  "default": true
                },
                "description": {
                  "type": "string",
                  "maxLength": 200
                },
                "default": {
                  "description": "Default value if not required"
                }
              }
            }
          },
          "outputs": {
            "type": "array",
            "description": "Output parameters",
            "items": {
              "type": "object",
              "required": ["name", "type"],
              "additionalProperties": false,
              "properties": {
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 50
                },
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "boolean", "object", "array"]
                },
                "description": {
                  "type": "string",
                  "maxLength": 200
                }
              }
            }
          },
          "errorHandling": {
            "type": "array",
            "description": "Documented error cases and handling",
            "items": {
              "type": "object",
              "required": ["error", "handling"],
              "additionalProperties": false,
              "properties": {
                "error": {
                  "type": "string",
                  "description": "Error condition",
                  "minLength": 1,
                  "maxLength": 200
                },
                "handling": {
                  "type": "string",
                  "description": "How the error is handled",
                  "minLength": 1,
                  "maxLength": 300
                }
              }
            }
          },
          "dependencies": {
            "type": "array",
            "description": "Other skills this skill depends on",
            "items": {
              "type": "string",
              "pattern": "^[a-z0-9_]+$"
            }
          },
          "performance": {
            "type": "object",
            "description": "Performance characteristics",
            "additionalProperties": false,
            "properties": {
              "timeComplexity": {
                "type": "string",
                "description": "Big-O notation for time complexity",
                "minLength": 1,
                "maxLength": 20
              },
              "spaceComplexity": {
                "type": "string",
                "description": "Big-O notation for space complexity",
                "minLength": 1,
                "maxLength": 20
              },
              "typicalExecutionTime": {
                "type": "string",
                "description": "Typical execution time for normal inputs",
                "minLength": 1,
                "maxLength": 50
              }
            }
          },
          "examples": {
            "type": "array",
            "description": "Usage examples",
            "items": {
              "type": "object",
              "required": ["input", "output"],
              "additionalProperties": false,
              "properties": {
                "description": {
                  "type": "string",
                  "maxLength": 200
                },
                "input": {
                  "description": "Example input"
                },
                "output": {
                  "description": "Example output"
                }
              }
            }
          },
          "version": {
            "type": "string",
            "description": "Skill version",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          },
          "status": {
            "type": "string",
            "description": "Skill status",
            "enum": ["stable", "beta", "experimental", "deprecated"]
          },
          "notes": {
            "type": "string",
            "description": "Additional implementation notes",
            "maxLength": 1000
          }
        }
      }
    }
  }
}
